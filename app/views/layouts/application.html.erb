<!DOCTYPE html>
<html ng-app='GeoP' id='ng-app'>
	<head>
		<meta http-equiv="Content-type" content="text/html; charset=utf-8">
		<%= render '/layouts/ios' %>
		<title><%
		if !@global_company.nil?
		%><%="%s / " % @global_company.name %><%
		end
		%> Surfy.pro / v<%=@geop_version%>b</title>
		<%= include_gon %>
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<script type="text/javascript" src="https://www.google.com/jsapi"></script>
		<%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
		<%= javascript_include_tag "application", "data-turbolinks-track" => true %>
		<%= csrf_meta_tags %>
	</head>
	<body id="body-container" ng-cloak>
		<div id="spinner-zone"></div>
		<div  ng-controller="BodyController">
			<%= render 'layouts/menu_top' %>
			<%= render 'layouts/notifications' %>
			<%= render 'layouts/right_popup' %>
			<div class="container-fluid main-container">
				<%= yield %>
			</div>
		</div>
		<%= render 'layouts/analytics' %>
		<%= render 'layouts/ios_links' %>
	</body>
</html>
