<div class="item box" ng-repeat="i in items | filter:itemFilter">
  <% if @global_user_type != 'READ' %>
  <a class="option fa fa-edit" href="/admin/items/{{i.id}}/edit" title="Editer"></a>
  <% end %>
  <a class="option fa fa-arrow-circle-right" href="/items/{{i.id}}" title="Voir"></a>
  <div class="box-content" >
    <h4 ng-bind-html="i.name | highlight:query">{{i.name}}</h4>
    <table class="item">
      <tr class="description" ng-if="i.description">
        <th colspan="2">Description</th>
      </tr>
      <tr class="description" ng-if="i.description">
        <td ng-bind-html="i.description | highlight:query" colspan="2" >{{i.description}}</td>
      </tr>
      <tr ng-if="i.code">
        <th>Code</th>
        <td ng-bind-html="i.code | highlight:query">{{i.code}}</td>
      </tr>
      <tr ng-if="i.price > 0">
        <th>Prix</th>
        <td>{{i.price}} &euro;</td>
      </tr>
    </table>
  </div>
</div>
