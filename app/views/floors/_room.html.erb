
<div ng-if='room != null' >
  <a class="btn btn-default" href="/admin/rooms/{{room.json.id}}/edit">Modifier la pièce</a>
  <table class='room'>
    <tr>
      <th>Nom</th><td>{{room.json.name}}</td>
      <th>Type</th><td>{{room.json.room_type.name}}</td>    
    </tr>
    <tr>
      <th>Surface</th><td>{{room.getArea()}} m²</td>
      <th>Organization</th><td>{{room.json.organization.name}} [{{room.json.organization.organization_type.name}}]</td>      
      <!-- <td colspan="2"></td> -->
    </tr>
  </table>
</div>