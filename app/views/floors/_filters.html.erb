<div  class="filter-container" ng-controller="FiltersCtrl" >
<ul id="myTabFilter" class="nav nav-pills nav-justified" role="tablist" >
  <li ng-repeat="filter in filterNames" ng-class="{active : $first}">
    <a href="#{{filter.name}}_filter" ng-click="filterPaneClick(filter, buildingId);" >{{filter.label}}</a>
  </li>
</ul>
<div class="tab-content" >
  <div class="tab-pane" ng-class="{active : $first, in : $first}" id="{{filter.name}}_filter" ng-repeat="filter in filterNames" >
    <form class="form-horizontal">
      <ul class="filters">
        <li class="check-all color-filter  animated flipInX">
          <div class="checkbox">
            <label><input type="checkbox" ng-model="f[filter.name].checkAll" ng-change="f[filter.name].CheckAll()"><span ng-if="f[filter.name].checkAll == true">Tout décocher</span><span ng-if="f[filter.name].checkAll == false">Tout cocher</span></label>
          </div>
        </li>
        <li ng-repeat="(id, rt) in f[filter.name].filters.names" style="background-color: {{rt.color}}" class='color-filter animated flipInX'>
          <div class="checkbox">
            <label><input type="checkbox" ng-model="rt.state" ng-change="f[filter.name].filterStateChange(rt)">
            <a ng-if="filter.name === 'organization'" href="/organizations/{{id}}" class="filter-open-icon"><i class="fa fa-info-circle"></i></a>
            <span title="Aire" class="badge pull-right">{{f[filter.name].filters.values[id].areaSum}} m²</span>
            <!-- <span class="badge pull-right">{{f[filter.name].filters.values[id].perimeterSum}} m</span> -->
            <span title="Nombre de pièces" ng-if="f[filter.name].filters.values[id].count > 0" class="badge pull-right">{{f[filter.name].filters.values[id].count}} <i class="fa fa-codepen"></i></span>
            <span title="Nombre de personnes" ng-if="f[filter.name].filters.values[id].nbPeople > 0" class="badge pull-right">{{f[filter.name].filters.values[id].nbPeople}} <i class="fa fa-user"></i></span>
            <span title="Ratio personnes / m&#178;" ng-if="f[filter.name].filters.values[id].ratio > 0" class="badge pull-right">{{f[filter.name].filters.values[id].ratio}} <i class="fa fa-user"></i> / m&#178;</span>
            {{f[filter.name].filters.names[id].name}}&nbsp;
          </label>
        </div>
      </li>
    </ul>
  </form>
</div>
</div>
</div>
